FROM google/cloud-sdk
MAINTAINER Joseph Holley joeholley@google.com

# Update gcloud componenets used by this container
RUN echo 'debconf debconf/frontend select Noninteractive' | debconf-set-selections
RUN apt-get update
RUN apt-get -y install --upgrade gnupg google-cloud-sdk gpgv kubectl bc
RUN apt-get clean
RUN rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

ENV WDIR /home/openarena
WORKDIR $WDIR 
RUN mkdir -p $WDIR 
ADD ./node-stopper.sh $WDIR/node-stopper.sh

ENTRYPOINT ["/bin/bash"]
CMD ["./node-stopper.sh"]
